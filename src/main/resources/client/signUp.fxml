<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="568.0" prefWidth="1024.0" style="-fx-background-color: #0b0c0c;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.SignUpController">
        <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@cloud.png" />
         </image>
         <VBox.margin>
            <Insets left="420.0" right="420.0" top="80.0" />
         </VBox.margin>
      </ImageView>
      <TextField fx:id="nick" layoutX="240.0" layoutY="174.0" prefHeight="54.0" promptText="User nick" style="-fx-background-radius: 10;">
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" left="230.0" right="230.0" top="20.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="login" prefHeight="54.0" promptText="Login" style="-fx-background-radius: 10;">
         <VBox.margin>
            <Insets bottom="30.0" left="230.0" right="230.0" />
         </VBox.margin>
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="password" prefHeight="54.0" promptText="Password" style="-fx-background-radius: 10;">
         <VBox.margin>
            <Insets left="230.0" right="230.0" />
         </VBox.margin>
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="signUpBtn" mnemonicParsing="false" onAction="#signUpAction" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: #f5f1f1; -fx-background-radius: 10;" text="Sign up" textFill="#000000">
         <VBox.margin>
            <Insets left="410.0" right="410.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
      </Button>
        </children>
    </VBox>
